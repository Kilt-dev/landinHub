{
  "version": 2,
  "builds": [
    {

      "src": "apps/web/package.json",
      "use": "@vercel/static-build",
      "config": {

        "distDir": "build"
      }
    },
    {

      "src": "backend/src/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {

      "src": "/api/(.*)",
      "dest": "backend/src/$1"
    },
    {
      "src": "/(.*)",
      "dest": "apps/web/$1"
    }
  ],
  "installCommand": "pnpm install"
}