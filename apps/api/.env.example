# Environment Variables Configuration

# ================================
# AWS Configuration (REQUIRED)
# ================================

# AWS Credentials - Get from IAM Console
# NEVER commit these to Git! Add .env to .gitignore
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
AWS_REGION=ap-southeast-1

# S3 Bucket for storing landing pages
AWS_S3_BUCKET=landing-hub-pages
AWS_S3_REGION=ap-southeast-1

# CloudFront Configuration
# Price classes: PriceClass_100 (US+Europe), PriceClass_200 (US+Europe+Asia), PriceClass_All
AWS_CLOUDFRONT_PRICE_CLASS=PriceClass_100

# Route 53 for DNS management
AWS_ROUTE53_HOSTED_ZONE_ID=Z1234567890ABC
AWS_ROUTE53_BASE_DOMAIN=landinghub.app

# ACM Certificate ARN for SSL
# Must be in us-east-1 region for CloudFront
# This should be a wildcard cert for *.landinghub.app
AWS_ACM_CERTIFICATE_ARN=arn:aws:acm:us-east-1:123456789012:certificate/12345678-1234-1234-1234-123456789012

# ================================
# Application Configuration
# ================================

# Server
NODE_ENV=production
PORT=5000
API_URL=https://api.landinghub.com

# Frontend URL
FRONTEND_URL=https://landinghub.com

# ================================
# Database
# ================================

# MongoDB
MONGODB_URI=mongodb://localhost:27017/landing-hub
# Or MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/landing-hub?retryWrites=true&w=majority

# Redis (for caching & sessions)
REDIS_URL=redis://localhost:6379
# Or Redis Cloud:
# REDIS_URL=redis://default:password@redis-12345.cloud.redislabs.com:12345

# ================================
# Authentication
# ================================

# JWT Secret - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Session Secret
SESSION_SECRET=your-session-secret-key

# ================================
# Email Service (for notifications)
# ================================

# SendGrid
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxx

# Or SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@landinghub.com

# ================================
# Payment Gateway (optional)
# ================================

# Stripe
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxx

# PayPal
PAYPAL_CLIENT_ID=xxxxxxxxxxxxxxxxxxxx
PAYPAL_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxx
PAYPAL_MODE=sandbox

# ================================
# File Upload & Storage
# ================================

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=xxxxxxxxxxxxxxxxxxxx

# Max file size (in bytes) - 10MB
MAX_FILE_SIZE=10485760

# ================================
# Rate Limiting
# ================================

# Deployment rate limit
DEPLOYMENT_RATE_LIMIT=10
DEPLOYMENT_RATE_WINDOW=3600000

# API rate limit
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# ================================
# Monitoring & Analytics
# ================================

# Sentry (error tracking)
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxx@sentry.io/1234567

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# ================================
# Feature Flags
# ================================

# Enable/disable features
ENABLE_DEPLOYMENT=true
ENABLE_MARKETPLACE=true
ENABLE_TEMPLATES=true
ENABLE_ANALYTICS=true

# ================================
# Logging
# ================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log to file
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log

# ================================
# CORS Configuration
# ================================

# Allowed origins (comma-separated)
CORS_ORIGIN=https://landinghub.com,https://www.landinghub.com

# ================================
# AWS Advanced Settings (optional)
# ================================

# S3 Advanced
AWS_S3_ACCELERATION=false
AWS_S3_VERSIONING=true

# CloudFront Advanced
AWS_CLOUDFRONT_DEFAULT_TTL=300
AWS_CLOUDFRONT_MAX_TTL=86400
AWS_CLOUDFRONT_COMPRESS=true

# Route 53 Advanced
AWS_ROUTE53_TTL=300

# ================================
# Development Only
# ================================

# Mock AWS services in development
MOCK_AWS=false

# Debug mode
DEBUG=app:*

# ================================
# Security
# ================================

# HTTPS enforcement
FORCE_HTTPS=true

# Helmet security headers
HELMET_ENABLED=true

# CSRF protection
CSRF_ENABLED=true

# ================================
# Backup & Maintenance
# ================================

# Backup S3 bucket
BACKUP_S3_BUCKET=landing-hub-backups

# Maintenance mode
MAINTENANCE_MODE=false
