# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:5000

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/landing-hub
# Or use MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/landing-hub?retryWrites=true&w=majority

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# AWS Configuration for Deployment
# Required for CloudFront + Route 53 deployment
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-southeast-1

# S3 Bucket for landing pages
AWS_S3_BUCKET=landing-hub-deployments

# Route 53 Hosted Zone (optional - for custom domains)
AWS_ROUTE53_HOSTED_ZONE_ID=your-hosted-zone-id
AWS_ROUTE53_DOMAIN=landinghub.app

# ACM Certificate ARN (optional - for HTTPS on custom domains)
AWS_ACM_CERTIFICATE_ARN=arn:aws:acm:us-east-1:account-id:certificate/cert-id

# Stripe Configuration (if using payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration (if using payments)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# AI Chat Configuration
# Groq AI (Primary - Free, Fast)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# Google Gemini AI (Fallback)
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
